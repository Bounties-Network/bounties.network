
//
// introducing bounties.network
// changing the way we collaborate
//

#intro
  position relative
  margin-top 100px

.intro-floating-image
  display none
  position absolute
  z-index 100

// top left hex icon with background mobile
#intro-mobile-top-left-hexagon
  top 30px

// top left light purple glow mobile
#intro-mobile-top-left-purple-light
  top 100px
  left 60px

// bottom left small bee mobile
#intro-mobile-bottom-left-bee
  bottom -110px
  left 100px

#intro-mobile-bottom-left-circle
  bottom -30px
  left 60px

#intro-mobile-bottom-right-hexagons
  bottom 30px
  right 0

#intro-mobile-bottom-right-hexagon-bee
  bottom -110px
  right 100px

// desktop version hexagons and bees to the right
#intro-hexagons-right
  position absolute
  right 0
  z-index 100

// "Changing the way we collaborate."
#intro-description
  margin-top 8rem
  flex 0.4
  justify-self flex-start
  margin-right auto
  text-align left
  z-index 200
  flex-direction column
  p
    color #403656
    font-size $base-font-size
    line-height 1.75rem;
    margin-bottom 3rem
  .btn
    display inline-block
    flex 1

    &:not(:last-child)
      margin-right $m-spacing

@media screen and (max-width: 1199px)
  #intro-hexagons-right
    top 20%
    width 600px

@media screen and (max-width: 1122px)
  #intro-description
    flex 0.5

  #intro-hexagons-right
    // top 20%
    width 500px

@media screen and (max-width: 1020px)
  #intro-hexagons-right
    width 400px

@media screen and (max-width: 760px)
  #intro-description
    flex 0.7
    justify-self center
    margin-left auto
    margin-right auto
    text-align center

  #intro-hexagons-right
    display none

  #intro-mobile-top-left-hexagon
  #intro-mobile-top-left-purple-light
  #intro-mobile-bottom-left-bee
  #intro-mobile-bottom-left-circle
  #intro-mobile-bottom-right-hexagons
  #intro-mobile-bottom-right-hexagon-bee
    display block
