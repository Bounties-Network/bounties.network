
#partnerships
  background-color #F6F5F9
  #partnerships-title
    display flex

#partnerships-organizations-carousel
  height 150px

#partnerships-media-carousel
  height 250px

.partnerships-arrow-left
.partnerships-arrow-right
  ui-fonts()
  font-size 66px
  color #E1DEE8
  cursor pointer
  margin-top -28px
  &:hover
    color $color-link

