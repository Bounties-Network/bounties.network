//
// carousel generic styles
//

.carousel-outer
  // border 1px solid green
  display flex
  flex-direction row
  overflow auto
  align-items center
  width 100%
  // height 150px

.carousel-item
  // border 1px solid red
  display block

//
// carousel partner organizations styles
//

.carousel-organization-item
  width 25%
  min-width 25%
  max-width 25%

.carousel-organization-img
  display block
  margin auto
  height 65px
  filter: grayscale(100%)
  transition filter 0.3s
  &:hover
    filter: grayscale(0%)


//
// carousel media link-cards
//

.carousel-media-item
  width 31%
  min-width 31%
  max-width 31%
  margin-right 1.7rem
  background-color white
  box-shadow 2px 0 2px rgba(0, 0, 0, 0.05)

.carousel-media-heading
  padding $spacing-large
  font-size 0.8rem
  border-bottom 1px solid #EEEEEE

.carousel-media-icon
  width 33px
  height 33px
  margin-bottom $spacing-large

.carousel-media-img
  width 100%
  min-width 100%
  max-width 100%

// large phone or tablet
@media screen and (max-width: 760px)
  #partnerships
    padding 80px 0

  .carousel-organization-item
    width 50%
    min-width 50%
    max-width 50%

  .carousel-media-item
    width 50%
    min-width 50%
    max-width 50%


// phone
@media screen and (max-width: 400px)
  #partnerships
    padding 50px 0

  .col-xs-1
    display none

  .carousel-outer
    padding $spacing-large
    margin auto

  .carousel-organization-item
    width 50%
    min-width 50%
    max-width 50%

  .carousel-organization-img
    height 33px

  .carousel-media-item
    width 90%
    min-width 90%
    max-width 90%


// push the heading down in desktop mode
@media screen and (min-width: 760px)
  #partnerships
    padding 300px 0 200px 0
